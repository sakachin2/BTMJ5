<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
>
    <include layout="@layout/title_divider_custom"
                android:id="@+id/title_divider_custom"     
    />
    <LinearLayout
         android:layout_width="fill_parent"
         android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ffccff99"
    >
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
                android:id="@+id/llFile"                   
        >
            <Button
                android:id="@+id/Load"                   
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/Load"
                android:layout_gravity="right"
            />
            <Button
                android:id="@+id/Save"                   
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/Save"
                android:layout_gravity="right"
            />
        </LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
		            android:background="@color/separater"
                 android:focusable="true"
                 android:focusableInTouchMode="true"
        />       <!--avoid EditText kbd up-->
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_gravity="center_vertical"
                 android:gravity="center_vertical"
                 android:layout_weight="1"
            >
                <TextView
                     android:text="@string/Label_SettingIDName"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                     android:layout_gravity="center_vertical"
                />                         
                <!--    android:textSize="@dimen/textview_middle" -->
                <EditText
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                        android:id="@+id/etIDName"
                        android:background="@color/editable"
		            android:inputType="text"
                />                         
                <!--        android:textSize="@dimen/textview_middle"-->
                <TextView
                     android:text="@string/Label_SettingSyncDate"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                 android:layout_marginLeft="10px"
                />                         
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                        android:id="@+id/tvSyncDate"
                />                         
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                        android:id="@+id/tvAppVersion"
                        android:layout_marginLeft="5dp"
                />                         
            </LinearLayout> <!--IDName-->
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_gravity="right|center_vertical"
                 android:gravity="center_vertical"
            >
                <Button
                    android:id="@+id/btnDetail"        
                    android:layout_height="40dp"
                    android:layout_width="60dp"
                    android:text="@string/Label_RuleSettingDetail"
                 android:backgroundTint="#ffffa500"
	                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />
                <Button
                    android:id="@+id/btnOperation"        
                    android:layout_height="40dp"
                    android:layout_width="60dp"
                    android:text="@string/Label_Operation"
                 android:backgroundTint="#ffffa500"
	                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                />
                <Button
                    android:id="@+id/btnYakuList"        
                    android:layout_height="40dp"
                    android:layout_width="60dp"
                    android:text="@string/Label_YakuList"
                 android:backgroundTint="#ffffa500"
	                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <ScrollView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
        >
            <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
            >
            	<include layout="@layout/setting_rulesumm_options"
            	/>

            </LinearLayout><!-- one view hosted in scrollview-->
    	</ScrollView>
    </LinearLayout>

    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="2px"
                android:background="@color/separater"
    />

    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
            android:id="@+id/llShowStatus"                        
            android:visibility="gone"
    >
        <Button
            android:id="@+id/btnShowStatus"                        
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/Label_ShowStatus"
        />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvShowStatus"                        
                                android:background="@color/editable"
        />
		<!--	android:textSize="@dimen/textview_small_middle"-->

    </LinearLayout>

    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="2px"
                android:background="@color/separater"
    />

    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
            android:id="@+id/llBottomButtons"          
    >
        <Button
            android:id="@+id/OK"                        
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/OK"
            android:layout_gravity="center_vertical"
        />
        <Button
            android:id="@+id/Send"                   
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/Send"
            android:layout_gravity="center_vertical"
        />
        <Button
            android:id="@+id/SendBackOK"                   
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/SendBackOK"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
        />
        <Button
            android:id="@+id/SendBackNG"                   
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/SendBackNG"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
        />
        <Button
            android:id="@+id/Cancel"                       
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:layout_gravity="center_vertical"
        />
        <Button
            android:id="@+id/Help"                       
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/Help"
            android:layout_gravity="center_vertical"
        />
    </LinearLayout>
</LinearLayout>
