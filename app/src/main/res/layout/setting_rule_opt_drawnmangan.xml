<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>  <!--drawnMangan-->
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="2px"
                android:background="@color/separater"
    />
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >  <!--line1-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_DrawnMangan"
            android:textSize="@dimen/textview_middle"
    			android:background="@color/descriptiononly"
        />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/rgDrawnMangan"
            android:layout_width="wrap_content"
        >
            <RadioButton
                android:id="@+id/rbDrawnManganNo"
                android:text="@string/Label_No"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
            <RadioButton
                android:id="@+id/rbDrawnManganAsRon"
                android:text="@string/Label_DrawnManganAsRon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
            <RadioButton
                android:id="@+id/rbDrawnManganAsDrawn"
                android:text="@string/Label_DrawnManganAsDrawn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
        </RadioGroup>
        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                android:text="@string/Label_PointAmmount"
        />     
        <Spinner
             android:id="@+id/spnDrawnManganRank"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
        />
    </LinearLayout>  <!--line1-->
    <!--LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >
        <CheckBox
            android:id="@+id/cbDrawnManganDropBird"
            android:text="@string/Label_DrawnManganDropBird"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        />
    </LinearLayout-->  <!--line2-->
    <LinearLayout
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >  <!--line3-->
        <TextView
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:text="@string/Desc_DrawnMangan"
            android:gravity="center_vertical"
        />
    </LinearLayout>  <!--line3-->

</LinearLayout>
