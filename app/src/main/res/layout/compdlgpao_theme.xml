<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center_vertical"
    > <!--Pao-->                
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center_vertical"
        >
            <LinearLayout
                 android:orientation="horizontal"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
             android:gravity="center_vertical"
            >
                <TextView
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Label_PaoFor"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                />
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
                    android:id="@+id/tvPaoEswn"
                /> 
            </LinearLayout>
            <LinearLayout
                 android:orientation="horizontal"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginLeft="6dp"
                 android:layout_weight="1"
                    android:gravity="center_vertical"
            >
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="fill_parent"
                    android:gravity="center_vertical|right"
                     android:text="@string/Label_PaoPlayer"
                /> 
            </LinearLayout>
        <!--/RelativeLayout-->
        </LinearLayout>
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center_vertical"
        >
            <RadioGroup
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/rgPaoEswn"
            >
                <RadioButton
                    android:id="@+id/rbPaoNo"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/Label_No"
                />     
                <RadioButton
                    android:id="@+id/rbPaoE"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/ESWN_E"
                />     
                <RadioButton
                    android:id="@+id/rbPaoS"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/ESWN_S"
                />     
                <RadioButton
                    android:id="@+id/rbPaoW"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/ESWN_W"
                />     
                <RadioButton
                    android:id="@+id/rbPaoN"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/ESWN_N"
                />     
            </RadioGroup>   <!--pao-->
        </LinearLayout>   <!--PaoESWN-->
    </LinearLayout>   <!--Pao-->
</LinearLayout>
