<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
                 android:orientation="horizontal"
>
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="1"
                 android:gravity="center_vertical"
    >   <!--RonInfo-->
    <!-- android:layout_weight="1" means add all remaining(scrW-infoW-doraW) space to info because dora is weight=0-->
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
                 android:gravity="center_vertical"
        >
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
                 android:id="@+id/tvWinnerEswn"
            />
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text=":"
            />
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle2"
                            android:textColor="@color/darkorange"
                 android:id="@+id/CompType"
            />
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:id="@+id/llCompTypeLooser"
                 android:gravity="center_vertical"
            >
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
                     android:id="@+id/tvLooserEswn"
                />
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text=":"
                />
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle2"
                                android:textColor="@color/darkorange"
                     android:text="@string/Label_Looser"
                />
            </LinearLayout> <!--looser-->
        </LinearLayout> <!--winner,looser,comptype-->
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
                android:id="@+id/llSpritEswn"
                android:visibility="gone"
                 android:gravity="center_vertical"
        >
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                     android:text="@string/Label_SpritPosID"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffffff"
                    android:background="@color/spritposid"
                 android:gravity="center_vertical"
                 android:layout_gravity="center_vertical"
            />
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                     android:text=":"
            />
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                     android:id="@+id/tvSpritEswn"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="right|center_vertical"
    >
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                         android:text="@string/Label_Dora"
                /> 
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:orientation="vertical"  
                android:id="@+id/LLDora"
        >   <!--iamgeview -->
            <!--com.btmtest.dialog.CompDlgDora
                android:id="@+id/tilesDora"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
            /-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
