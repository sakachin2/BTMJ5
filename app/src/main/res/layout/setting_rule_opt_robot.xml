            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_Robot"
            android:textSize="@dimen/textview_middle"
        />
        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_RobotDescription"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
        /-->
        <CheckBox
            android:id="@+id/cbAllowRobot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_AllowRobot"
            android:gravity="center_vertical"
        />
    </LinearLayout>  <!--line1-->
    <!--LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >
        <CheckBox
            android:id="@+id/cbAllowRobotAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_AllowRobotAll"
            android:gravity="center_vertical"
        >
        <CheckBox
            android:id="@+id/cbAllowRobotAllButton"
