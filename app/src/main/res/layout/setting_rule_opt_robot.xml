<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>  <!--drawnMangan-->
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >  <!--line1-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_Robot"
            android:textSize="@dimen/textview_middle"
        />
        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_RobotDescription"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
        /-->
        <CheckBox
            android:id="@+id/cbAllowRobot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_AllowRobot"
            android:gravity="center_vertical"
        />
    </LinearLayout>  <!--line1-->
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >  <!--line2-->
        <CheckBox
            android:id="@+id/cbMinusRobot"
            android:text="@string/Label_MinusRobot"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_RobotPay"
            android:layout_marginLeft="20dp"
        />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/rgRobotPay"
            android:layout_width="fill_parent"
        >
            <RadioButton
                android:id="@+id/rbRobotPaySprit"
                android:text="@string/Label_RobotPaySprit"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
            <RadioButton
                android:id="@+id/rbRobotPayDependingScore"
                android:text="@string/Label_RobotPayDependingScore"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
        </RadioGroup>
    </LinearLayout>  <!--line2-->

</LinearLayout>
