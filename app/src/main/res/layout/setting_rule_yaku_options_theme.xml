<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
    >
        <TextView
            android:id="@+id/tvYakuStatementOnly"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
                     android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
        />
         <!--   android:text="@string/Desc_YakuStatementOnly"-->
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    > 
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="4px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_yaku_standard_theme"
        />
        <include layout="@layout/setting_rule_yaku_local_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    > 
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
            >
                <CheckBox
                    android:id="@+id/cbKuitan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Label_Kuitan"
                />
            </LinearLayout>
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
            >
                <CheckBox
                    android:id="@+id/cbPinfuTaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Label_PinfuTaken"
                />
            </LinearLayout>
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
            >
                <CheckBox
                    android:id="@+id/cbDoublePillow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Label_DoublePillow"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
        >
            <CheckBox
                android:id="@+id/cbShowAnywayBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Label_ShowAnywayBtn"
            />
            <TextView
                android:id="@+id/tvYakuStatementOnly"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/Desc_ShowAnywayBtn"
            />
        </LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
        >
            <include layout="@layout/setting_rule_opt_keiten_theme"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    > 
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_yaku_7pair_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    > 
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_yaku_fix_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    >
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_opt_reach_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    > 
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_yaku_fix2_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    > 
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_yaku_mangan8_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    > 
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_yakuman_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    >  <!--drawnMangan-->
        <include layout="@layout/setting_rule_opt_drawnmangan_theme"
        />
    </LinearLayout>  <!--drawnMangan-->
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    >  <!--drawnMangan-->
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="2px"
                    android:background="@color/separater"
        />
        <include layout="@layout/setting_rule_yaku_8cont_theme"
        />
    </LinearLayout>  <!--drawnMangan-->
</LinearLayout>
