<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
        <TextView
            android:text="@string/Desc_Preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
    			android:background="@color/bg_dialog_remarkable2"
        />
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="2px"
                android:background="@color/separater"
    />
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    >
        <include layout="@layout/setting_pref_opt_orientation_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="2px"
                android:background="@color/separater"
    />
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >
        <CheckBox
            android:id="@+id/cbDelRiverTileTaken"
            android:text="@string/Label_DelRiverTileTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >
        <CheckBox
            android:id="@+id/cbNoRelatedRule"
            android:text="@string/Label_NoRelatedRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    			android:background="@color/bg_dialog_remarkable2"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >
        <CheckBox
            android:id="@+id/cbNoTakeButton"
            android:text="@string/Label_NoTakeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    			android:background="@color/bg_dialog_remarkable2"
        />
        <CheckBox
            android:id="@+id/cbNoDiscardButton"
            android:text="@string/Label_NoDiscardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    			android:background="@color/bg_dialog_remarkable2"
        />
        <CheckBox
            android:id="@+id/cbNoAnywayButton"
            android:text="@string/Label_NoAnywayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    			android:background="@color/bg_dialog_remarkable2"
		                android:visibility="gone"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
    >
        <CheckBox
            android:id="@+id/cbLeftyPortrait"
            android:text="@string/Label_LeftyPortrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
        <CheckBox
            android:id="@+id/cbLeftyLandscape"
            android:text="@string/Label_LeftyLandscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="2px"
                android:background="@color/separater"
    />
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >
        <include layout="@layout/setting_pref_opt_sound_theme"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >
        <include layout="@layout/setting_pref_opt_bgm_theme"
        />
    </LinearLayout>
</LinearLayout>
