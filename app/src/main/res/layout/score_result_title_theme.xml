<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>   <!--***each line of score result***-->
        <TextView
             android:layout_width="0dp"
             android:layout_weight="0.05"
             android:layout_height="wrap_content"
                android:text="@string/Label_CurrentEswn"
                android:gravity="center"
                android:maxLines="1"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
        />     
        <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="0.60"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <TextView
                 android:layout_width="0dp"
                 android:layout_weight="0.20"
                 android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/Label_ScoreAddTotal"
                android:gravity="right"
                android:maxLines="1"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
            />     
            <TextView
                 android:layout_width="0dp"
                 android:layout_weight="0.20"
                 android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/Label_ScoreNewScore"
                android:maxLines="1"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
            />     
            <TextView
                 android:layout_width="0dp"
                 android:layout_weight="0.30"
                 android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/Label_MinusCharge"
                android:maxLines="1"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
            />     
            <TextView
                 android:layout_width="0dp"
                 android:layout_weight="0.30"
                 android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/Label_ScoreNewTotal"
                android:maxLines="1"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
            />     
        </LinearLayout>
        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:layout_weight="0.35"
                android:maxLines="1"
                        android:textSize="@dimen/smallfont_textsize_dialog_textview_middle"
        />         
</LinearLayout>
